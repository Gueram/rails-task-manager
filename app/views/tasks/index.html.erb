<h1>My Tasks</h1>

  <% @tasks.each do |task| %>
    <div>
      <% if task.completed %>
        <input type="checkbox" checked disabled>
      <% else %>
        <input type="checkbox" disabled>
      <% end %>
      <%= link_to task.title, task_path(task)  %>
    </div>
  <% end %>

<div>
  <%= link_to "Add a new task", tasks_new_path  %>
</div>
