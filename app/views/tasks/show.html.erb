<h1><%= @task.title %></h1>

<div>
  <p><%= @task.details %></p>
</div>

<div>
  <% if @task.completed %>
    <input type="checkbox" checked disabled>
    This task is completed
  <% else %>
    <input type="checkbox" disabled>
    This task is not completed yet
  <% end %>
</div>

<div>
  <%= link_to "Back to list", tasks_path  %>
</div>

<div>
  <%= link_to "Edit this task", edit_task_path(@task)  %>
</div>